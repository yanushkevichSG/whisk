<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="tests" parallel="classes">

    <listeners>
        <listener class-name="framework.listeners.ParallelizeTestsListener"/>
    </listeners>

    <test name="Tests">
        <packages>
            <package name="tests.*"/>
        </packages>
    </test>

</suite>